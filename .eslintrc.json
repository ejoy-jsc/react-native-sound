{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-trailing-spaces": "error",
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],
    "eqeqeq": [
      "error",
      "smart"
    ],
    "no-console": "off"
  }
}